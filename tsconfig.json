{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext", 
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true // Option: To generate .d.ts files when publishing
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}