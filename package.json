{
  "name": "cliedit",
  "version": "0.5.1",
  "description": "A zero-dependency, embeddable TUI text editor for Node.js CLI applications.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeTease/cliedit.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "ACKNOWLEDGEMENTS.md"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "demo": "npm run build && cross-env NODE_ENV=development tsx src/demo.ts",
    "test": "vitest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "cli",
    "editor",
    "terminal",
    "tui",
    "raw-mode",
    "typescript"
  ],
  "author": "CodeTease",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9",
    "@types/node": "^22",
    "cross-env": "^7",
    "eslint": "^9",
    "globals": "^17",
    "tsx": "^4",
    "typescript": "^5",
    "typescript-eslint": "^8",
    "vitest": "^4"
  }
}
