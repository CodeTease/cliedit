{
  "name": "cliedit",
  "version": "0.3.0",
  "description": "A lightweight, raw-mode terminal editor utility for Node.js CLI applications, with line wrapping and undo/redo support.",
  "repository": "https://github.com/CodeTease/cliedit",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "ACKNOWLEDGEMENTS.md"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "demo": "npm run build && cross-env NODE_ENV=development tsx src/demo.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "cli",
    "editor",
    "terminal",
    "tui",
    "raw-mode",
    "typescript"
  ],
  "author": "CodeTease",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22",
    "cross-env": "^7",
    "tsx": "^4",
    "typescript": "^5"
  }
}
